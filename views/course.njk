{% extends "layout.njk" %} 
{% block head %}

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<title> {{item.title}} </title>

{% endblock %} 

{% block content %}

<div class="cardsTitle">
    <p>{{item.title}}</p>
</div>

<section class="course">

    <div class="card" id={{item.id}}>
        <div class="cardCourseContainer">
            <iframe src="https://blog.rocketseat.com.br/{{item.id}}" frameborder="0"></iframe>
        </div>

        <div class="cardContent">
            <p>{{item.title}}</p>
        </div>

        <div class="cardInfo">
            <div class="author">
                <p>{{item.author}}</p>
            </div>

            <div class="readingTime">
                <p>{{item.duration}}</p>
            </div>
        </div>
    </div>

    

</section>




{% endblock %}