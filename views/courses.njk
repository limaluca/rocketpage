{% extends "layout.njk" %} {% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<title> Leia  nossos artigos </title>
{% endblock %} {% block content %}
<div class="cardsTitle">
    <p>Artigos</p>
</div>

<section class="cards">

    {% for item in items %}
    <div class="card" id={{item.id}}>
        <div class="cardImageContainer">
            <img src={{item.avatar_url}} alt="Imagem de: {{item.title}}">
        </div>

        <div class="cardContent">
            <p>{{item.title}}</p>
        </div>

        <div class="cardInfo">
            <div class="author">
                <p>{{item.author}}</p>
            </div>

            <div class="readingTime">
                <p>{{item.duration}}</p>
            </div>
        </div>
    </div>
    {% endfor %}

    

</section>

<div class="modalOverlay">
    <div class="modal">

        <a class="maximizeModal">
            <i class="material-icons">maximize</i>
        </a>

        <a class="closeModal">
            <i class="material-icons">close</i>
        </a>

        <div class="modalContent">
        </div>

    </div>
</div>

<script src="/scripts.js">
</script>
{% endblock %}